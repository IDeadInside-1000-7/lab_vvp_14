#include <stdio.h> 
#include <locale.h>
int main()
{
    setlocale(LC_ALL, "Russian");
    float p;
    printf("Начальный вклад в банке равен 1000 руб.");
    printf("\nЧерез каждый месяц размер вклада увеличивается на P процентов от имеющейся суммы (P — вещественное число, 0 < P < 25).");
    printf("\nВведите P: ");
    scanf("%f", &p);
    printf("По данному P программа определит, через сколько месяцев размер вклада превысит 1100 руб., и выведет найденное количество месяцев K (целое число) и итоговый размер вклада S (вещественное число)");
    int k = 1;
    float s = 1000;
    while (s <= 1100) 
    {
        k++;
        s += s * p / 100;
    }
    printf("\n\nK = %i; S = %f\n", k, s);
}
